<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evo.passwordgenerator">

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fitsSystemWindows="true"
        android:debuggable="true">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AboutActivity"></activity>
        <activity android:theme="@style/ReporterTheme" android:label="Reporter" android:name=".GHReporter" android:parentActivityName=".MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MainActivity" />
        </activity>
        <activity android:name=".MainActivityTest" android:windowSoftInputMode="adjustResize"></activity>

    </application>



</manifest>
