<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evo.passwordgenerator">

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fitsSystemWindows="true"
        android:debuggable="true"
        android:resizeableActivity="false">



        <activity android:name=".activities.MainActivity" android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AboutActivity" />
        <activity android:name=".activities.AboutActivity_test" />
        <activity android:name=".activities.AboutActivity_test2" android:theme="@style/AppTheme.MaterialAboutActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:theme="@style/ReporterTheme" android:label="Reporter" android:name=".activities.GHReporter"
            android:parentActivityName=".activities.AboutActivity_test2" />

        <provider
            android:name=".data.PasswordProvider"
            android:authorities="com.evo.passwordgenerator"
            android:exported="false" />

    </application>



</manifest>
